<!DOCTYPE html>
<html lang="en">


  <!-- head -->
  <%- include('./partials/head.ejs') %> 
  <!-- End head -->
<body>

  <!-- Navigation -->
  <%- include('./partials/nav.ejs') %> 
  <!-- End Navigation -->

  <!-- Blogs content -->
  <div class="blogs content">
    <h2>All Blogs</h2>
    <% if(blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>

      <h3 class="title"><%= blog.title %></h3>
      <p class="snippet"><%= blog.snippet %></p>

      <% }) %>
    <% } else { %>
      <p>There are no blogs to display ...</p>
    <% } %>
  </div>
  <!--  End Blogs content -->
  <!-- footer -->
  <%- include('./partials/footer.ejs') %> 
  <!-- End footer -->
</body>

</html>